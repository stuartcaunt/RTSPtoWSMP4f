    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "GO111MODULE": "on"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch demo client",
            "cwd": "${workspaceFolder}/demo-client",
            "program": "${workspaceFolder}/demo-client/index.js",
            "env": {
            },
            "outFiles": [
              "${workspaceFolder}/demo-client/dist/**/*.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }
    ]
}